doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/assets/img/apple-icon.png')
    link(rel='icon', type='image/png', href='/assets/img/favicon.png')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title #{title}
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no', name='viewport')
    // Fonts and icons
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200', rel='stylesheet')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.7.1/css/all.css', integrity='sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr', crossorigin='anonymous')
    // CSS Files
    link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
    link(href='/assets/css/now-ui-dashboard.min.css?v=1.4.1', rel='stylesheet')
    //link(href='/bs-table/dist/bootstrap-table.min.css', rel='stylesheet')
    link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css")

    link(href='/assets/css/custom_admin.css', rel='stylesheet')
  body
    .wrapper
      .sidebar(data-color='orange')
        // Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
        .logo
          a.simple-text.logo-normal(href='/') K-TOP Inc.
        #sidebar-wrapper.sidebar-wrapper
          ul.nav
            li(class=side_active==='member'?'active':'')
              a(href='/admin')
                i.now-ui-icons.users_single-02
                p.h5 직원관리
            li(class=side_active==='attendance'?'active':'')
              a(href='/admin/attendance')
                i.now-ui-icons.education_atom
                p.h5 근태관리
            //li(class=side_active === 'operate_report' ? 'active' : '')
            //  a(href='/admin/operate/report')
            //    i.now-ui-icons.education_atom
            //    p.h5 가동보고서 관리
            li(class=side_active==='work'?'active':'')
              a(href='/admin/work')
                i.now-ui-icons.tech_tablet
                p.h5 작업관리
            li(class=side_active === 'notice' ? 'active' : '')
              a(href='/admin/notice/list')
                i.now-ui-icons.files_paper
                p.h5 공지사항
            li(class=side_active === 'closed' ? 'active':'')
              a(href='/admin/closed/list')
                i.now-ui-icons.files_paper
                p.h5 휴무계 관리
            //if(user_lv === 9)
            li(class=side_active === 'superAdmin' ? 'active' : '')
              a(rel='tooltip', title='전체회원관리', data-placement='bottom', href='/admin/superAdmin')
                i.now-ui-icons.ui-2_settings-90
                p.h5 전체회원관리
      #main-panel.main-panel
        // Navbar
        nav.navbar.navbar-expand-lg.navbar-transparent.bg-primary.navbar-absolute
          .container-fluid
            .navbar-wrapper
              .navbar-toggle
                button.navbar-toggler(type='button')
                  span.navbar-toggler-bar.bar1
                  span.navbar-toggler-bar.bar2
                  span.navbar-toggler-bar.bar3
              p #{title}
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navigation', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
              span.navbar-toggler-bar.navbar-kebab
              span.navbar-toggler-bar.navbar-kebab
              span.navbar-toggler-bar.navbar-kebab
            #navigation.collapse.navbar-collapse.justify-content-end
              ul.navbar-nav
                if(user_lv > 0)
                  li.nav-item
                    a.nav-link(rel='tooltip', title='내정보', data-placement='bottom', href='/users/profile')
                      i.now-ui-icons.users_single-02
                      p.d-lg-none.d-xl-none 내정보
                else
                  li.nav-item
                    a.nav-link(rel='tooltip', title='회원가입', data-placement='bottom', href='/users/join')
                      i.now-ui-icons.users_single-02
                      p.d-lg-none.d-xl-none 회원가입
                li.nav-item
                  a.nav-link(rel='tooltip', title='등록', data-placement='bottom', href='/work')
                    i.now-ui-icons.files_paper
                    p.d-lg-none.d-xl-none 등록
                li.nav-item
                  a.nav-link(rel='tooltip', title='업무일지', data-placement='bottom', href='/work/list')
                    i.now-ui-icons.ui-1_calendar-60
                    p.d-lg-none.d-xl-none 업무일지
                if(user_lv > 1)
                  li.nav-item.dropdown
                    a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                      i.now-ui-icons.ui-1_settings-gear-63
                      p.d-lg-none.d-xl-none 관리자화면
                    .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                      a.dropdown-item(href='/admin') 직원관리
                      a.dropdown-item(href='/admin/attendance') 근태관리
                      //a.dropdown-item(href='/admin/operate/report') 가동보고서 관리
                      a.dropdown-item(href='/admin/work') 작업관리
                      a.dropdown-item(href='/admin/notice/list') 공지사항
                      a.dropdown-item(href='/admin/closed/list') 휴무계 관리
                      a.dropdown-item(href='/admin/superAdmin') 전체회원관리
        block content

    // Core JS Files
    script(src='/assets/js/core/jquery.min.js')
    script(src='/assets/js/core/popper.min.js')
    script(src='/assets/js/core/bootstrap.min.js')
    script(type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js")

    //script(src='/bs-table/dist/bootstrap-table.min.js')
    script(src='/assets/js/plugins/moment-with-locale.js', type='text/javascript')
    script(src='/assets/js/plugins/bootstrap-selectpicker.js', type='text/javascript')
    script(src='/assets/js/plugins/bootstrap-datetimepicker.js', type='text/javascript')
    // Notifications Plugin
    script(src='/assets/js/plugins/bootstrap-notify.js')
    // Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc
    //script(src='/assets/js/plugins/perfect-scrollbar.jquery.min.js')
    script(src='/assets/js/now-ui-dashboard.min.js?v=1.4.1', type='text/javascript')
    script(src='/assets/js/custom/ie_issue.js', type='text/javascript')
    script.
      let now_ui_template = '<div data-notify="container" class="col-9 col-sm-3 alert alert-{0} alert-with-icon" role="alert" data-notify-position="top-right">' +
      '<button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="position: absolute; right: 10px; top: 50%; margin-top: -13px; z-index: 1062;">' +
      '<i class="now-ui-icons ui-1_simple-remove"></i>' +
      '</button>' +
      '<span data-notify="icon" class="now-ui-icons ui-1_bell-53"></span> ' +
      '<span data-notify="title">{1}</span> ' +
      '<span data-notify="message">{2}</span>' +
      '<a href="#" target="_blank" data-notify="url"></a>' +
      '</div>';
    block append_js