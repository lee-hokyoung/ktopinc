.col-md-6
  form#formRemark
    .card.card-tasks
      .card-header
        .d-flex.justify-content-between
          h4.card-title 비고
          button.btn.btn-primary(type='button' onclick='fnCreate("remark", "#formRemark")') 저장
      .card-body.overflow-auto(style='max-height:300px;')
        .table-full-width.table-responsive
          table.table
            thead.text-primary
              tr
                th.text-center #
                th.text-center 비고
                th.text-center 일본어
                //th.text-center
            tbody#new_remark
              each w, i in remark
                tr
                  td.text-center #{i + 1}
                  td.text-center
                    .form-group.my-0
                      input.form-control(type='text', value=w.remark, name='remark')
                  td.text-center
                    .form-group.my-0
                      input.form-control(type='text', value=w.jp_name, name='remark')
                  //td.td-actions.text-right
                  //  button.btn.btn-info.btn-round.btn-icon.btn-icon-mini.btn-neutral(type='button', onclick='fnUpdate("' + w._id + '", this, "remark")')
                  //    i.now-ui-icons.ui-2_settings-90
                  //  button.btn.btn-danger.btn-round.btn-icon.btn-icon-mini.btn-neutral(type='button', onclick='fnDelete("' + w._id + '", this, "remark")')
                  //    i.now-ui-icons.ui-1_simple-remove
              tr
                td.text-center
                  a.btn.btn-info.btn-sm.px-2(onclick='fnNewRow("#new_remark", "remark", "jp_name")')
                    i.now-ui-icons.ui-1_simple-add.text-white(style='font-size:9px;')
                td.text-center
                  .form-group.my-0
                    input.form-control(type='text', name='remark', title='remark')
                td.text-center
                  .form-group.my-0
                    input.form-control(type='text', name='jp_name', title='remark')